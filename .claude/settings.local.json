{
  "permissions": {
    "allow": [
      "Bash(cargo --version:*)",
      "Bash(rustc:*)",
      "Bash(cargo search:*)",
      "WebFetch(domain:github.com)",
      "WebFetch(domain:raw.githubusercontent.com)",
      "WebFetch(domain:api.github.com)",
      "WebFetch(domain:docs.rs)",
      "Bash(cargo check:*)",
      "Bash(cargo test:*)",
      "Bash(cargo clippy:*)",
      "Bash(cargo fmt:*)",
      "Bash(cargo xtask:*)",
      "Bash(cargo run:*)",
      "Bash(just --list:*)",
      "Bash(dprint:*)",
      "WebFetch(domain:dprint.dev)",
      "Bash(ls:*)",
      "Bash(just lint:*)",
      "Bash(just fmt:*)",
      "Bash(codesign:*)",
      "Bash(just install:*)",
      "Bash(nm -gU:*)",
      "Bash(defaults read:*)",
      "Bash(plutil:*)",
      "Bash(pluginkit:*)",
      "Bash(auval:*)",
      "Bash(xattr:*)",
      "Bash(log show:*)",
      "Bash(/usr/bin/log show:*)",
      "WebFetch(domain:www.charlescleyn.com)",
      "WebFetch(domain:www.chrisjmendez.com)",
      "WebFetch(domain:crates.io)",
      "Bash(curl:*)",
      "Bash(python3:*)",
      "Bash(just bundle-au:*)",
      "Bash(just bundle-debug:*)"
    ]
  },
  "hooks": {
    "PostToolUse": [
      {
        "matcher": "Edit|Write",
        "hooks": [
          {
            "type": "command",
            "command": "just fmt 2>/dev/null; true"
          }
        ]
      },
      {
        "matcher": "Edit",
        "command": "if echo \"$CLAUDE_TOOL_INPUT\" | grep -q 'params.rs' && echo \"$CLAUDE_TOOL_INPUT\" | grep -qE '#\\[id\\s*='; then echo 'BLOCK: Parameter IDs are permanent â€” renaming breaks saved presets. See CLAUDE.md Gotchas.'; exit 2; fi"
      }
    ]
  }
}
